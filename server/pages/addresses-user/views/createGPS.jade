extends /core/views/layout

block added_scripts
  script(async, src='/public/js/pages/addresses-user/create-addresses-user.client.js')

block content
  h1 Ajouter une adresse avec des coordonnées GPS
  
  .ui.form(id="form-create-address")
    .field
      label Intitulé
      input(name='address_name' type='text' placeholder="Maison")
      br
    .fields
      .seven.wide.field
        label Card Number
        input(type='text', name='card[number]', maxlength='16', placeholder='Card #')
      .four.wide.field
        label CVC
        input(type='text', name='card[cvc]', maxlength='3', placeholder='CVC')
      .six.wide.field
        label Expiration
        .two.fields
          .field
            select.ui.fluid.search.dropdown(name='card[expire-month]')
              option(value='') Month
              option(value='1') January
              option(value='2') February
              option(value='3') March
              option(value='4') April
              option(value='5') May
              option(value='6') June
              option(value='7') July
              option(value='8') August
              option(value='9') September
              option(value='10') October
              option(value='11') November
              option(value='12') December
          .field
            input(type='text', name='card[expire-year]', maxlength='4', placeholder='Year')

    br
    label Longitude
    input(name='longitude' type='text' placeholder="2.287592000000018")
    br
    label Latitude
    input(name='latitude' type='text' placeholder="48.862725")
    br
    a(href='https://www.coordonnees-gps.fr/') Trouver vos coordonnées GPS.

    br
    button.ui.button(type='submit') Ajouter l'adresse
